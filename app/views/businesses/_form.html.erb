<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-body">
          <%= form_for @business, html: { multipart: true } do |f| %>
            <% if @business.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@business.errors.count, "error") %> prohibited this business from being saved:</h2>
                <ul>
                <% @business.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :name %><br>
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :address %><br>
              <%= f.text_area :address, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :image %><br>
              <%= f.file_field :image, class: "form-control" %>
            </div> 
            <div class="form-group">
              <%= f.submit "Edit Business", class: "btn btn-primary" %>
              <%= link_to "Cancel", businesses_path, class: "btn btn-primary" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>






